{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": "app",
    "paths": {
      "@/*": [
        "./*"
      ],
      "@components/*": ["app/components/*"],
      "@screens/*": ["app/screens/*"],
      "@assets/*": ["assets/*"],
      "@utils/*": ["app/utils/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
